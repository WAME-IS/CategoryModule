{block content}
	<h1>{$siteTitle}</h1>

	<a n:if="count($categories) > 0" class="btn btn-success ajax-modal pull-right" n:href=":Admin:Category:create, 'id' => null, 'type' => $type">
		<span class="fa fa-plus"></span>
		{_'Crate category'}
	</a>
	
	{if count($categories) == 0}
		<div class="lead text-muted">{_'You do not have crate any categories.'}</div>
		<a class="btn btn-success" n:href=":Admin:Category:create, 'id' => null, 'type' => $type">{_'Create first category'}</a>
	{else}
		{control categoryGrid}
	{/if}