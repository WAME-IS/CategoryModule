{block content}

{if $count == 0}
    <div class="empty-block">
        <p>{_'You do not have created any categories.'}</p>

        <a class="btn btn-success btn-lg ajax-modal ajax-modal-fixed" n:href=":Admin:Category:create, 'id' => $type">
            <i class="material-icons">add_circle_outline</i>
            {_'Create first category'}
        </a>
    </div>
{else}
    {control grid}
{/if}